<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/edge_margin"
        android:autoLink="web"
        android:linksClickable="true"
        android:text="@string/disclaimer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TopMenu" />

    <androidx.cardview.widget.CardView
        android:id="@+id/TopMenu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/poster_height"
        app:layout_constraintTop_toBottomOf="@+id/app_bar_layout"
        app:cardCornerRadius="@dimen/corner_radius"
        android:layout_margin="@dimen/edge_margin"
        android:elevation="@dimen/elevation">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/teal_200">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/vampire_killers" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                tools:srcCompat="@drawable/What_we_do_in_the_shadows" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/pride_prejudice_zombie" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/evil_dead_poster" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/page_title"
            app:navigationIcon="@drawable/ic_round_menu_24"
            app:menu="@menu/top_app_bar"
            style="@style/Widget.MaterialComponents.Toolbar.Primary"/>

    </com.google.android.material.appbar.AppBarLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/design_default_color_primary_dark"
        app:itemTextColor="@color/white"
        app:itemIconTint="@color/white"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_bar_menu"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_menu"
            android:textColor="@color/white"
            android:background="?selectableItemBackgroundBorderless"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_favorite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_favorite"
            android:textColor="@color/white"
            android:background="?selectableItemBackgroundBorderless"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_watch_later"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_watch_later"
            android:textColor="@color/white"
            android:background="?selectableItemBackgroundBorderless"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_collections"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_collections"
            android:textColor="@color/white"
            android:background="?selectableItemBackgroundBorderless"/>

        <Button
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_settings"
            android:textColor="@color/white"
            android:background="?selectableItemBackgroundBorderless"/>
    />
</androidx.constraintlayout.widget.ConstraintLayout>